<div class="container">
  <div class="col-lg-6 col-lg-offset-3">
    <div class="title">
      <h1>All links</h1>
    </div>
    <div class="row">
      <%= render 'api_shortners/form' %>
    </div>

    <div class="row">
      <% @shortners.each do |shortner| %>
        <div class="col-lg-3 col-md-4 col-sm-6 col-xs-12 link">
          <p class="short_url"><%= link_to shortner.slug, shortner.input_url, target: '_blank' %></p>
          <ul class="click_time">
            <li><span class="time"><%= time_ago_in_words(shortner.created_at) %> ago</span></li>
          </ul>
          <p class="long_url"><%= link_to truncate(shortner.input_url, length: 60), shortner.input_url %></p>
        </div>
      <% end %>
    </div>
  </div>
</div>
<div class="shortner">
</div>
